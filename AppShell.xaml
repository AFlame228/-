<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:TimeTracker"
       x:Class="TimeTracker.AppShell">

    <ShellContent Title="Main Page" ContentTemplate="{DataTemplate local:MainPage}" />

    <!-- Регистрируем страницы для навигации -->
    <ShellContent Route="ReportPage" ContentTemplate="{DataTemplate local:ReportPage}" />
    <ShellContent Route="HistoryPage" ContentTemplate="{DataTemplate local:HistoryPage}" />
    <ShellContent Route="AddEntryPage" ContentTemplate="{DataTemplate local:AddEntryPage}" />
</Shell>

